<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="7dp">

    <RelativeLayout
        android:id="@+id/capa_estadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/item_img_estadio"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/bayer_estadio" />

        <TextView
            android:id="@+id/item_tx_estadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_toRightOf="@+id/item_img_estadio"
            android:text="Alianz Arean"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/capa_equipo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


        <ImageView
            android:id="@+id/item_img_equipo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/bayer" />

        <TextView
            android:id="@+id/item_tx__equipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:layout_toEndOf="@+id/item_img_equipo"
            android:layout_toRightOf="@+id/item_img_equipo"
            android:text="Bayer Munich"
            android:textStyle="bold"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>